void mem_over(int x, int size) {
	std::cout << x << "\n";
	int* p = new int{ x * x };

	size += sizeof(*p);
	std::cout << size << "\n";

	mem_over(*p, size);

	//std::cout << sizeof(*p) << "\n";


}



	mem_over(1000000000, 0); //12764 bytes

