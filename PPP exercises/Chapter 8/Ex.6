void print(const string& label, const vector<string>& v)
{
    cout << label << " (" << v.size() << "): {";
    for (int i = 0; i < v.size(); ++i) {
        if (i % 8 == 0) cout << endl;
        cout << v[i];
        if (i < v.size() - 1) cout << ", ";
    }
    cout << "\n}\n";
}


vector<string> copy_reverse(vector <string> v) {

    if (v.size() < 2) error("there must be at least 2 elements in the vector");

    vector<string> reverse;
    int rvers = v.size() - 1;

    for (int i = 0; i < v.size(); ++i) {

        reverse.push_back(v[rvers]);
        --rvers;

    }

    return reverse;

    }


vector <string> swap_reverse ( vector <string>& v) {
    if (v.size() < 2) error("there must be at least 2 elements in the vector");

    int last = v.size() - 1;

    for (int i = 0; i < v.size(); ++i) {

        if (last == i) break;
        if ((last - i) == 1) { 
            
            swap(v[i], v[last]); break; }
        
        swap(v[i], v[last]);
        --last;
    }

    return v;

}




